@model PagedList.IPagedList<Blog.Models.Article>

@{
    ViewBag.Title = "List";
}


@using TimeAgo;
@using PagedList.Mvc

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

<div class="container">
    <div class="row">
        @foreach (var article in Model.OrderByDescending(a => a.viewCounter).ThenByDescending(a => a.DateAdded))
        {
            <div class="col-sm-6">
                <article>
                    <header>
                        <h2>
                            @Html.ActionLink(@article.Title, "Details", "Article", new { @id = article.Id }, null)
                        </h2>
                        <small class="author pull-right">
                            <strong>@article.DateAdded.TimeAgo()</strong>
                        </small>
                    </header>
                    <p>
                        @article.Content
                    </p>
                    <footer class="pull-right">
                        <small class="author">
                            --author @article.Author.FullName | Views: @article.viewCounter
                        </small>
                    </footer>
                </article>
            </div>
        }
    </div>
</div>
@Html.PagedListPager(Model, page => Url.Action("ListArticles",
            new { categoryId = ViewBag.currentCategoryId, page, pageSize = Model.PageSize }))
        Showing @Model.FirstItemOnPage to @Model.LastItemOnPage of @Model.TotalItemCount Articles
<hr />

